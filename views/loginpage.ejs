

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>form project</title>
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    
    <link rel="stylesheet" href="/css/styles.css">
    
</head>


<body class="backgroundcolor">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="marginadjust" id="loginModal">
                  <div class="modal-body modalbodynew">
                    <div class="well" style="margin-bottom: 0px; width:1000px; height:800px;">
                      <ul class="nav nav-tabs">
                        <%if(message.length>0){ %> 
                          <div class="alert alert-sucess">
                          <%- message %>
                          </div>
                         <% } %>
                        <li><a id="create-account" href="#"  onclick="loginRegisterDisplayHandlingFunction()"data-toggle="tab">Login</a></li>
                        <li ><a id="login-page" href="#"   onclick="loginRegisterDisplayHandlingFunction()" data-toggle="tab" >Create Account</a></li>
                      </ul>
                      <div  id="myTabContent" class="tab-content ">
                        <div  id="login">
                          <form class="form-horizontal" action="/logindata" method="POST" >
                            <fieldset>
                              <div id="legend">
                                <legend class="">Login</legend>
                              </div>    
                              <div class="control-group">
                                <!-- Username -->
                                <label class="control-label"  for="usernames"><h4>Username</h4> </label>
                                <div class="controls">
                                  <input type="text" id="username"  style="width:600px;"  name="usernames" placeholder="" class="input-xlarge">
                                </div>
                              </div>
         
                              <div class="control-group">
                                <!-- Password-->
                                <label class="control-label" for="passwords"><h4>Password</h4></label>
                                <div class="controls">
                                  <input type="password" id="password" style="width:600px;"  name="passwords" placeholder="pasword" class="input-xlarge">
                                </div>
                              </div>

         
                              <div class="control-group">
                                <!-- Button -->
                                <div class="controls">
                                  <button  class="btn btn-success" style="width: 150px;">Login</button>
                                </div>
                              </div>
                            </fieldset>
                          </form>   
                                       
                        </div>


                        <div  id="create" class="create-account-page" >
                          <div id="legend">
                            <legend class="">Create Account</legend>
                          </div> 
                        <div id="google">
                          <label for="googlauth"><h4>Signin with google:</h4></label>
                          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                            <i class="fab fa-google"></i>
                            Sign In with Google
                          </a>
                          <span style="color:red;" name="namespan"></span>
                         </div>
                         </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- <script src="/js/homepage.js" charset="utf-8"></script> -->
    <script src="/js/homepage.js"></script>
</body>
</html>